{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "outDir": "dist",
    "lib": [ "dom", "es2015", "es2016", "es2017" ],
    "target": "es5",
    "watch": true,
    "sourceMap": true
  },
  "compileOnSave": true,
  "traceResolution": true,
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],
}